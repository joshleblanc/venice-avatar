<div class="max-w-6xl mx-auto w-full">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white">Characters</h1>
      <p class="text-slate-400 mt-1">Create and manage your AI characters</p>
    </div>
    <% if Current.user.venice_key_valid? %>
      <div class="flex flex-wrap gap-3">
        <button onclick="toggleAutoGenerateForm()" 
                class="group relative inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white font-medium shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 transition-all duration-300"
                title="Generate a complete character automatically">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Auto Generate
        </button>
        <%= link_to new_character_path, class: "group relative inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white font-medium shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300" do %>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Character
        <% end %>
      </div>
    <% end %>
  </div>

  <%= render "shared/character_tabs", active: :your %>

  <!-- Auto Generate Form (Hidden by default) -->
  <div id="autoGenerateForm" class="hidden mb-8 glass rounded-2xl p-6 glow-violet">
    <div class="flex items-center gap-3 mb-5">
      <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-white">Auto Generate Character</h3>
    </div>
    <%= form_with url: auto_generate_characters_path, method: :post, local: true, class: "space-y-5",
                  data: { 
                    controller: "character-enhance",
                    character_enhance_enhance_scenario_url_value: enhance_scenario_characters_path
                  } do |form| %>
      <div>
        <%= form.label :scenario_context, "Scenario Context (Optional)", class: "block text-sm font-medium text-slate-300 mb-2" %>
        <div class="relative">
          <%= form.text_area :scenario_context,
                             rows: 3,
                             placeholder: "Describe the type of scenarios you plan to explore with this character (e.g., 'Medieval fantasy adventures', 'Modern detective mysteries', 'Sci-fi space exploration')",
                             data: { character_enhance_target: "scenarioField" },
                             class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" %>
          <button type="button"
                  data-character-enhance-target="scenarioButton" data-action="click->character-enhance#enhanceScenario"
                  class="absolute bottom-3 right-3 px-3 py-1.5 text-xs font-medium text-white bg-gradient-to-r from-violet-600 to-purple-600 rounded-lg hover:from-violet-500 hover:to-purple-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-1.5"
                  title="Use AI to enhance and expand your scenario description">
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Enhance with AI
          </button>
        </div>
        <p class="mt-2 text-sm text-slate-500">
          This helps ensure the generated character is appropriate for your intended scenarios.
        </p>
      </div>
      <div class="flex justify-end gap-3">
        <button type="button" onclick="toggleAutoGenerateForm()" 
                class="px-5 py-2.5 text-sm font-medium text-slate-300 bg-slate-700/50 border border-slate-600/50 rounded-xl hover:bg-slate-700 hover:border-slate-500 transition-all duration-200">
          Cancel
        </button>
        <%= form.submit "Generate Character",
                        class: "px-5 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 rounded-xl shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 transition-all duration-300 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <script>
    function toggleAutoGenerateForm() {
      const form = document.getElementById('autoGenerateForm');
      form.classList.toggle('hidden');
    }
  </script>

  <!-- User Created Characters -->
  <% if @user_characters.any? %>
    <div class="mb-12">
      <h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
        <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Your Characters
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @user_characters.each do |character| %>
          <div class="group glass rounded-2xl p-6 hover:bg-slate-700/50 transition-all duration-300 hover:shadow-xl hover:shadow-violet-500/10 gradient-border">
            <div class="flex items-start justify-between mb-4">
              <% if character.generating? %>
                <h3 class="text-lg font-semibold text-white flex items-center gap-2">
                  <svg class="animate-spin w-4 h-4 text-violet-400" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Generating...
                </h3>
              <% else %>
                <h3 class="text-lg font-semibold text-white group-hover:text-violet-300 transition-colors"><%= character.name %></h3>
              <% end %>
              <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-emerald-500/20 text-emerald-400 border border-emerald-500/30">Custom</span>
            </div>
            
            <p class="text-slate-400 text-sm mb-5 line-clamp-3 leading-relaxed">
              <%= character.description %>
            </p>
            
            <div class="flex justify-between items-center pt-4 border-t border-slate-700/50">
              <%= button_to "Chat", character_conversations_path(character),
                            method: :post, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed", disabled: character.generating? || !Current.user.venice_key_valid? %>
              
              <div class="flex items-center gap-3">
                <%= link_to character_path(character), class: "text-slate-400 hover:text-white transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
                <%= link_to edit_character_path(character), class: "text-slate-400 hover:text-violet-400 transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
                <%= button_to character_path(character),
                            method: :delete,
                            class: "text-slate-400 hover:text-red-400 transition-colors",
                            data: { 
                              turbo_confirm: "Are you sure you want to delete \"#{character.name}\"? This action cannot be undone and will also delete all conversations with this character." 
                            },
                            title: "Delete character" do %>
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </div>
            </div>
            
            <% if character.character_instructions.blank? %>
              <div class="mt-4 p-3 rounded-xl bg-amber-500/10 border border-amber-500/20 text-xs text-amber-400">
                <div class="flex items-center gap-2">
                  <svg class="animate-spin w-3.5 h-3.5" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Generating personality...
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @user_characters.empty? %>
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center">
        <svg class="w-10 h-10 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-white mb-2">No characters yet</h3>
      <p class="text-slate-400 mb-8 max-w-md mx-auto">Get started by creating your first AI character to chat with.</p>
      <div class="flex justify-center gap-4">
        <%= link_to new_character_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white font-medium shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300" do %>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Character
        <% end %>
      </div>
    </div>
  <% end %>
</div>
