<div class="max-w-2xl mx-auto w-full">
  <div class="glass rounded-2xl glow-violet overflow-hidden">
    <div class="px-8 py-6 border-b border-slate-700/50">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-violet-500 to-indigo-600 flex items-center justify-center shadow-lg shadow-violet-500/20">
          <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white">Profile Settings</h1>
          <p class="text-slate-400">Manage your account preferences</p>
        </div>
      </div>
    </div>
    
    <div class="px-8 py-6 space-y-8">
      <!-- Account Information -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Account Information
        </h3>
        <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Email Address</dt>
            <dd class="mt-1 text-sm text-white"><%= @user.email_address %></dd>
          </div>
          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Member Since</dt>
            <dd class="mt-1 text-sm text-white"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
          </div>
        </dl>
      </div>
      
      <!-- Preferences -->
      <div class="pt-6 border-t border-slate-700/50">
        <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Preferences
        </h3>
        <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Timezone</dt>
            <dd class="mt-1 text-sm text-white">
              <%= @user.timezone.present? ? @user.timezone : "Not set" %>
            </dd>
          </div>

          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Venice Key</dt>
            <dd class="mt-1 text-xs font-mono">
              <% if @user.venice_key_valid %>
                <span class="text-emerald-400"><%= @user.obfuscated_venice_key %></span>
              <% else %>
                <span class="text-red-400">Invalid key</span>
              <% end %>
            </dd>
          </div>
          
          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Preferred Text Model</dt>
            <dd class="mt-1 text-sm text-white">
              <div class="font-medium"><%= @user.preferred_text_model.present? ? @user.preferred_text_model.titleize : "Default" %></div>
              <% if @selected_text_model_id.present? %>
                <div class="text-xs text-slate-500 mt-1">Model: <%= @selected_text_model_id %></div>
              <% end %>
            </dd>
          </div>
          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Preferred Image Model</dt>
            <dd class="mt-1 text-sm text-white">
              <div class="font-medium"><%= @user.preferred_image_model.present? ? @user.preferred_image_model.titleize : "Default" %></div>
              <% if @selected_image_model_id.present? %>
                <div class="text-xs text-slate-500 mt-1">Model: <%= @selected_image_model_id %></div>
              <% end %>
            </dd>
          </div>

          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Image Style</dt>
            <dd class="mt-1 text-sm text-white">
              <%= @user.image_style %>
            </dd>
          </div>

          <div class="glass-light rounded-xl p-4">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">Safe Mode</dt>
            <dd class="mt-1 text-sm">
              <% if @user.safe_mode %>
                <span class="inline-flex items-center gap-1.5 text-emerald-400">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  Enabled
                </span>
              <% else %>
                <span class="text-slate-400">Disabled</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
    
    <div class="px-8 py-5 border-t border-slate-700/50 glass-light">
      <%= link_to edit_profile_path, class: "inline-flex items-center gap-2 px-5 py-2.5 text-sm font-medium rounded-xl bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300" do %>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Profile
      <% end %>
    </div>
  </div>
  
  <% if @user.balances %>
    <div class="glass rounded-2xl mt-6 overflow-hidden">
      <div class="px-8 py-5 border-b border-slate-700/50">
        <h2 class="text-xl font-bold text-white flex items-center gap-2">
          <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Balances
        </h2>
        <p class="text-sm text-slate-500 mt-1">Updates once per hour</p>
      </div>
      <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3 p-6">
        <div class="glass-light rounded-xl p-4 text-center">
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">USD</dt>
          <dd class="mt-2 text-2xl font-bold text-white"><%= @user.balances.balances.usd %></dd>
        </div>
        <div class="glass-light rounded-xl p-4 text-center">
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">DIEM</dt>
          <dd class="mt-2 text-2xl font-bold text-white"><%= @user.balances.balances.diem %></dd>
        </div>
      </dl>
      <div class="px-6 py-4 border-t border-slate-700/50 glass-light">
        <p class="text-sm text-slate-400">
          <svg class="w-4 h-4 inline-block mr-1 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          API key expires: <%= @user.balances.key_expiration || "N/A" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
