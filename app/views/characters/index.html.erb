<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-2">
    <h1 class="text-3xl font-bold text-gray-900">Characters</h1>
    <% if Current.user.venice_key_valid? %>
      <div class="flex space-x-3">
        <button onclick="toggleAutoGenerateForm()" 
                class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors"
                title="Generate a complete character automatically">
          Auto Generate Character
        </button>
        <%= link_to "Create New Character", new_character_path,
                    class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>

  <%= render "shared/character_tabs", active: :your %>

  <!-- Auto Generate Form (Hidden by default) -->
  <div id="autoGenerateForm" class="hidden mb-6 bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Auto Generate Character</h3>
    <%= form_with url: auto_generate_characters_path, method: :post, local: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :scenario_context, "Scenario Context (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative">
          <%= form.text_area :scenario_context,
                             rows: 3,
                             id: "auto_scenario_context_field",
                             placeholder: "Describe the type of scenarios you plan to explore with this character (e.g., 'Medieval fantasy adventures', 'Modern detective mysteries', 'Sci-fi space exploration')",
                             class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          <button type="button"
                  id="auto_enhance_scenario_btn"
                  onclick="enhanceAutoScenario()"
                  class="absolute bottom-2 right-2 px-3 py-1 text-xs font-medium text-white bg-purple-600 rounded hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  title="Use AI to enhance and expand your scenario description">
            ‚ú® Enhance with AI
          </button>
        </div>
        <p class="mt-1 text-sm text-gray-500">
          This helps ensure the generated character is appropriate for your intended scenarios.
        </p>
        <p class="mt-1 text-sm text-purple-600">
          üí° Try the "Enhance with AI" button to expand a brief idea into a detailed scenario!
        </p>
      </div>
      <div class="flex justify-end space-x-3">
        <button type="button" onclick="toggleAutoGenerateForm()" 
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
          Cancel
        </button>
        <%= form.submit "Generate Character",
                        class: "px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md shadow-sm hover:bg-green-700" %>
      </div>
    <% end %>
  </div>

  <script>
    function toggleAutoGenerateForm() {
      const form = document.getElementById('autoGenerateForm');
      form.classList.toggle('hidden');
    }
    
    async function enhanceAutoScenario() {
      const textarea = document.getElementById('auto_scenario_context_field');
      const button = document.getElementById('auto_enhance_scenario_btn');
      const prompt = textarea.value.trim();
      
      if (!prompt) {
        alert('Please enter a brief scenario idea first (e.g., "a spicy rooftop romance")');
        return;
      }
      
      // Disable button and show loading state
      button.disabled = true;
      const originalText = button.innerHTML;
      button.innerHTML = '‚è≥ Enhancing...';
      
      try {
        const response = await fetch('<%= enhance_scenario_characters_path %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
          },
          body: JSON.stringify({ prompt: prompt })
        });
        
        if (!response.ok) {
          throw new Error('Failed to enhance scenario');
        }
        
        const data = await response.json();
        
        // Update the scenario field with the enhanced version
        textarea.value = data.scenario;
        
        // Auto-resize textarea if needed
        textarea.style.height = 'auto';
        textarea.style.height = textarea.scrollHeight + 'px';
        
      } catch (error) {
        console.error('Error enhancing scenario:', error);
        alert('Failed to enhance scenario. Please try again.');
      } finally {
        // Re-enable button
        button.disabled = false;
        button.innerHTML = originalText;
      }
    }
  </script>

  <!-- User Created Characters -->
  <% if @user_characters.any? %>
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Your Characters</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @user_characters.each do |character| %>
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <% if character.generating? %>
                <h3 class="text-xl font-semibold text-gray-900">Generating Character...</h3>
              <% else %>
                <h3 class="text-xl font-semibold text-gray-900"><%= character.name %></h3>
              <% end %>
              <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Custom</span>

            </div>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= character.description %>
            </p>
            
            <div class="flex justify-between items-center">
              <%= button_to "Chat", character_conversations_path(character),
                            method: :post, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors text-sm disabled:opacity-50", disabled: character.generating? || !Current.user.venice_key_valid? %>
              
              <div class="flex space-x-2">
                <%= link_to "View", character_path(character),
                            class: "text-gray-600 hover:text-gray-800 text-sm" %>
                <%= link_to "Edit", edit_character_path(character),
                            class: "text-blue-600 hover:text-blue-800 text-sm" %>
                <%= button_to "Delete", character_path(character),
                            method: :delete,
                            class: "text-red-600 hover:text-red-800 text-sm bg-transparent border-none p-0 cursor-pointer",
                            data: { 
                              turbo_confirm: "Are you sure you want to delete \"#{character.name}\"? This action cannot be undone and will also delete all conversations with this character." 
                            },
                            title: "Delete character" %>
              </div>
            </div>
            
            <% if character.character_instructions.blank? %>
              <div class="mt-3 p-2 bg-yellow-50 border border-yellow-200 rounded text-xs text-yellow-700">
                <div class="flex items-center">
                  <svg class="animate-spin -ml-1 mr-2 h-3 w-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Generating personality...
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @user_characters.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
        <path d="M34 40h10v-4a6 6 0 00-10.712-3.714M34 40H14m20 0v-4a9.971 9.971 0 00-.712-3.714M14 40H4v-4a6 6 0 0110.713-3.714M14 40v-4c0-1.313.253-2.566.713-3.714m0 0A9.971 9.971 0 0124 24c4.004 0 7.625 2.371 9.287 6.286M32 14a6 6 0 11-12 0 6 6 0 0112 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No characters yet</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating your first character.</p>
      <div class="mt-6">
        <%= link_to "Create Character", new_character_path,
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
