<div class="max-w-6xl mx-auto w-full">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white">Characters</h1>
      <p class="text-slate-400 mt-1">Browse the Venice character library</p>
    </div>
  </div>

  <%= render "shared/character_tabs", active: :venice %>

  <% if @available_tags.any? %>
    <div class="glass rounded-2xl p-5 mb-6">
      <label class="block text-sm font-medium text-slate-300 mb-3">Filter by Tag</label>
      <div class="flex flex-wrap gap-2">
        <%= link_to venice_characters_path(filter: @filter, sort: @sort),
                    class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-200 #{@selected_tag.blank? ? 'bg-gradient-to-r from-violet-600 to-indigo-600 text-white shadow-lg shadow-violet-500/25' : 'bg-slate-700/50 text-slate-300 hover:bg-slate-700 border border-slate-600/50'}" do %>
          All
        <% end %>
        <% @available_tags.each do |tag| %>
          <%= link_to venice_characters_path(tag: tag.name, filter: @filter, sort: @sort),
                      class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-200 #{@selected_tag == tag.name ? 'bg-gradient-to-r from-violet-600 to-indigo-600 text-white shadow-lg shadow-violet-500/25' : 'bg-slate-700/50 text-slate-300 hover:bg-slate-700 border border-slate-600/50'}" do %>
            <%= tag.name %> (<%= tag.taggings_count %>)
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="glass rounded-2xl p-5 mb-8">
    <%= form_with url: venice_characters_path, method: :get, local: true, class: "flex flex-wrap items-end gap-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Filter</label>
        <%= f.select :filter,
            options_for_select([
              ["All", "all"],
              ["Adult only", "adult"],
              ["Non-adult only", "non_adult"]
            ], @filter),
            {},
            class: "px-4 py-2.5 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Sort by</label>
        <%= f.select :sort,
            options_for_select([
              ["Most Recent", "recent_desc"],
              ["Name (A–Z)", "name_asc"],
              ["Name (Z–A)", "name_desc"],
              ["Imports (Most)", "imports_desc"],
              ["Imports (Least)", "imports_asc"]
            ], @sort),
            {},
            class: "px-4 py-2.5 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" %>
      </div>

      <div>
        <%= f.submit "Apply", class: "px-5 py-2.5 bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white font-medium rounded-xl shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <% if @venice_characters.any? %>
    <div>
      <h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
        <svg class="w-5 h-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        Venice Characters
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @venice_characters.each do |character| %>
          <div class="group glass rounded-2xl p-6 hover:bg-slate-700/50 transition-all duration-300 hover:shadow-xl hover:shadow-violet-500/10 gradient-border">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-lg font-semibold text-white group-hover:text-violet-300 transition-colors"><%= character.name %></h3>
              <div class="flex items-center gap-2">
                <% imports = (character.stats&.dig('imports') || 0).to_i %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-slate-700/50 text-slate-300 border border-slate-600/50" title="Number of imports"><%= imports %> imports</span>
                <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-violet-500/20 text-violet-400 border border-violet-500/30">Venice</span>
              </div>
            </div>

            <p class="text-slate-400 text-sm mb-5 line-clamp-3 leading-relaxed">
              <%= character.description %>
            </p>

            <div class="flex justify-between items-center pt-4 border-t border-slate-700/50">
              <%= button_to character_conversations_path(character),
                            method: :post,
                            class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 text-white shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed",
                            disabled: !Current.user.venice_key_valid? do %>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                Chat
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center">
        <svg class="w-10 h-10 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-white mb-2">No Venice characters available</h3>
      <p class="text-slate-400 mb-8 max-w-md mx-auto">Try again later or create your own character.</p>
    </div>
  <% end %>
</div>
