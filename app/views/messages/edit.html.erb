<%= turbo_frame_tag "message_content_#{@message.id}" do %>
  <%= form_with(model: @message, url: conversation_message_path(@message.conversation, @message), method: :patch) do |form| %>
    <%= form.text_area :content, class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200 mb-3", rows: 3 %>
    <div class="flex gap-2">
      <%= form.submit "Save", class: "px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white shadow-lg shadow-emerald-500/25 transition-all duration-300 cursor-pointer" %>
      <%= link_to "Cancel", conversation_path(@message.conversation), class: "px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 border border-slate-600/50 rounded-lg hover:bg-slate-700 transition-all duration-200" %>
    </div>
  <% end %>
<% end %>
