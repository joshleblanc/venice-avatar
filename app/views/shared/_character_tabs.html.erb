<%# locals: active (symbol) - :your or :venice %>
<div class="mb-8">
  <nav class="flex space-x-2 p-1 glass rounded-xl w-fit" aria-label="Tabs">
    <% your_active = (local_assigns[:active] == :your) %>
    <% venice_active = (local_assigns[:active] == :venice) %>

    <%= link_to characters_path,
      class: [
        "px-5 py-2.5 rounded-lg font-medium text-sm transition-all duration-200",
        your_active ? "bg-gradient-to-r from-violet-600 to-indigo-600 text-white shadow-lg shadow-violet-500/25" : "text-slate-400 hover:text-white hover:bg-white/5"
      ].join(" ") do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Your Characters
      </span>
    <% end %>

    <%= link_to venice_characters_path,
      class: [
        "px-5 py-2.5 rounded-lg font-medium text-sm transition-all duration-200",
        venice_active ? "bg-gradient-to-r from-violet-600 to-indigo-600 text-white shadow-lg shadow-violet-500/25" : "text-slate-400 hover:text-white hover:bg-white/5"
      ].join(" ") do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        Venice Characters
      </span>
    <% end %>
  </nav>
</div>

