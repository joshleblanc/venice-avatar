<div id="message_<%= message.id %>" class="flex <%= message.role == "user" ? "justify-end" : "justify-start" %> mb-4" data-controller="collapse">
  <div class="max-w-xs lg:max-w-md px-4 py-3 rounded-2xl <%= message.role == "user" ? "bg-gradient-to-r from-violet-600 to-indigo-600 text-white shadow-lg shadow-violet-500/20" : "glass text-slate-100" %>">
    <% if message.role == "assistant" %>
      <div class="flex items-center mb-2">
        <div class="w-6 h-6 rounded-lg mr-2 overflow-hidden bg-gradient-to-br from-violet-500 to-indigo-600 flex items-center justify-center">
          <% if message.conversation.character.avatar.attached? %>
            <%= image_tag message.conversation.character.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <span class="text-white text-xs font-bold"><%= message.conversation.character.name.first %></span>
          <% end %>
        </div>
        <span class="text-xs text-slate-400"><%= message.conversation.character.name %></span>
      </div>
    <% end %>

    <!-- Message content with inline highlighted actions/thoughts -->
    <%= turbo_frame_tag "message_content_#{message.id}" do %>
      <p class="text-sm whitespace-pre-wrap leading-relaxed"><%= message.formatted_content.html_safe %></p>
    
    <!-- BRB indicator for auto-generated "brb" messages -->
    <% if message.role == "assistant" && message.auto_generated? && message.conversation.character_away? %>
      <div class="mt-3 p-2.5 rounded-xl bg-violet-500/10 border border-violet-500/20 text-xs text-violet-300">
        <div class="flex items-center gap-1.5">
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-medium">Character stepped away briefly</span>
        </div>
        <% if message.auto_generation_reason.present? %>
          <div class="mt-1.5 text-violet-400 italic"><%= message.auto_generation_reason %></div>
        <% end %>
      </div>
    <% end %>
    
    <!-- Character away indicator for conversations -->
    <% if message.conversation.character_away? && message.role == "assistant" && message.conversation.messages.last == message %>
      <div class="mt-3 p-2.5 rounded-xl bg-amber-500/10 border border-amber-500/20 text-xs text-amber-300">
        <div class="flex items-center gap-1.5">
          <svg class="w-3.5 h-3.5 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-medium">Waiting for character to return...</span>
        </div>
      </div>
    <% end %>
    
    <div class="flex items-center justify-between mt-2 pt-2 border-t <%= message.role == "user" ? "border-white/10" : "border-slate-700/50" %>">
      <div class="text-xs <%= message.role == "user" ? "text-violet-200" : "text-slate-500" %>">
        <%= time_ago_in_words(message.created_at) %> ago
      </div>
      <div class="flex gap-1.5 ml-3">
        <% if message.role == "assistant" && message.conversation.messages.last == message %>
          <%= button_to regenerate_conversation_message_path(message.conversation, message), method: :post, class: "p-1 rounded-md transition-colors #{ message.role == 'user' ? 'text-violet-200 hover:text-white hover:bg-white/10' : 'text-slate-500 hover:text-white hover:bg-white/5' }" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          <% end %>
        <% end %>
        <%= link_to edit_conversation_message_path(message.conversation, message), class: "p-1 rounded-md transition-colors #{ message.role == 'user' ? 'text-violet-200 hover:text-white hover:bg-white/10' : 'text-slate-500 hover:text-white hover:bg-white/5' }" do %>
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
        <%= button_to conversation_message_path(message.conversation, message), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this message?" }, class: "p-1 rounded-md transition-colors #{ message.role == 'user' ? 'text-violet-200 hover:text-white hover:bg-white/10' : 'text-slate-500 hover:text-red-400 hover:bg-red-500/10' }" do %>
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
