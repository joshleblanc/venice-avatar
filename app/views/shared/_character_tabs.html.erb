<%# locals: active (symbol) - :your or :venice %>
<div class="mb-6 border-b border-gray-200">
  <nav class="-mb-px flex space-x-8" aria-label="Tabs">
    <% your_active = (local_assigns[:active] == :your) %>
    <% venice_active = (local_assigns[:active] == :venice) %>

    <%= link_to characters_path,
      class: [
        "whitespace-nowrap py-4 px-1 border-b-2 font-medium",
        your_active ? "border-blue-600 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
      ].join(" ") do %>
      Your Characters
    <% end %>

    <%= link_to venice_characters_path,
      class: [
        "whitespace-nowrap py-4 px-1 border-b-2 font-medium",
        venice_active ? "border-blue-600 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
      ].join(" ") do %>
      Venice Characters
    <% end %>
  </nav>
  </div>

