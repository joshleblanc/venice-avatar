<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-2">
    <h1 class="text-3xl font-bold text-gray-900">Characters</h1>
  </div>

  <%= render "shared/character_tabs", active: :venice %>

  <% if @available_tags.any? %>
    <div class="bg-white border rounded-lg p-4 mb-6">
      <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Tag</label>
      <div class="flex flex-wrap gap-2">
        <%= link_to venice_characters_path(filter: @filter, sort: @sort),
                    class: "px-3 py-1.5 rounded-full text-sm font-medium transition-colors #{@selected_tag.blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
          All
        <% end %>
        <% @available_tags.each do |tag| %>
          <%= link_to venice_characters_path(tag: tag.name, filter: @filter, sort: @sort),
                      class: "px-3 py-1.5 rounded-full text-sm font-medium transition-colors #{@selected_tag == tag.name ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
            <%= tag.name %> (<%= tag.taggings_count %>)
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="bg-white border rounded-lg p-4 mb-6">
    <%= form_with url: venice_characters_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Filter</label>
        <%= f.select :filter,
            options_for_select([
              ["All", "all"],
              ["Adult only", "adult"],
              ["Non-adult only", "non_adult"]
            ], @filter),
            {},
            class: "border-gray-300 rounded-md shadow-sm text-sm" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Sort by</label>
        <%= f.select :sort,
            options_for_select([
              ["Most Recent", "recent_desc"],
              ["Name (A–Z)", "name_asc"],
              ["Name (Z–A)", "name_desc"],
              ["Imports (Most)", "imports_desc"],
              ["Imports (Least)", "imports_asc"]
            ], @sort),
            {},
            class: "border-gray-300 rounded-md shadow-sm text-sm" %>
      </div>

      <div class="pt-5">
        <%= f.submit "Apply", class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm" %>
      </div>
    <% end %>
  </div>

  <% if @venice_characters.any? %>
    <div>
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Venice Characters</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @venice_characters.each do |character| %>
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= character.name %></h3>
              <div class="flex items-center space-x-2">
                <% imports = (character.stats&.dig('imports') || 0).to_i %>
                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded" title="Number of imports">Imports: <%= imports %></span>
                <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded">Venice</span>
              </div>
            </div>

            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= character.description %>
            </p>

            <div class="flex justify-between items-center">
              <%= button_to "Chat", character_conversations_path(character),
                            method: :post,
                            class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors text-sm disabled:opacity-50",
                            disabled: !Current.user.venice_key_valid? %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
        <path d="M34 40h10v-4a6 6 0 00-10.712-3.714M34 40H14m20 0v-4a9.971 9.971 0 00-.712-3.714M14 40H4v-4a6 6 0 0110.713-3.714M14 40v-4c0-1.313.253-2.566.713-3.714m0 0A9.971 9.971 0 0124 24c4.004 0 7.625 2.371 9.287 6.286M32 14a6 6 0 11-12 0 6 6 0 0112 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No Venice characters available</h3>
      <p class="mt-1 text-sm text-gray-500">Try again later or create your own character.</p>
    </div>
  <% end %>
</div>
