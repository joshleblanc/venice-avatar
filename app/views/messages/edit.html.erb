<%= turbo_frame_tag "message_content_#{@message.id}" do %>
  <%= form_with(model: @message, url: conversation_message_path(@message.conversation, @message), method: :patch) do |form| %>
    <%= form.text_area :content, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-800 mb-2", rows: 3 %>
    <div class="flex gap-2">
      <%= form.submit "Save", class: "px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700" %>
      <%= link_to "Cancel", conversation_path(@message.conversation), class: "px-3 py-1 bg-gray-500 text-white text-sm rounded hover:bg-gray-600" %>
    </div>
  <% end %>
<% end %>
