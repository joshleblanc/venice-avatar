<div class="max-w-2xl mx-auto w-full">
  <div class="glass rounded-2xl glow-violet overflow-hidden">
    <div class="px-8 py-6 border-b border-slate-700/50">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-violet-500 to-indigo-600 flex items-center justify-center shadow-lg shadow-violet-500/20">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white">Edit Profile</h1>
          <p class="text-slate-400">Update your account preferences</p>
        </div>
      </div>
    </div>
    
    <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
      <div class="px-8 py-6 space-y-6">
        <% if @user.errors.any? %>
          <div class="p-4 rounded-xl bg-red-500/10 border border-red-500/20">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="text-sm font-medium text-red-400">There were errors with your submission:</h3>
                <ul class="mt-2 text-sm text-red-400/80 list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        
        <div>
          <%= form.label :timezone, "Timezone", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.select :timezone,
                          options_for_select(ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }, @user.timezone),
                          { prompt: "Select your timezone" },
                          { class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" } %>
          <p class="mt-2 text-sm text-slate-500">This helps us show you accurate timestamps in conversations.</p>
        </div>

        <div>
          <%= form.label :venice_key, "Venice Key", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.password_field :venice_key, class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200", placeholder: "Enter your Venice API key" %>
          <p class="mt-2 text-sm text-slate-500">Get your key from <a href="https://venice.ai" target="_blank" class="text-violet-400 hover:text-violet-300">Venice.ai</a></p>
          <% if @user.venice_key.present? %>
            <p class="mt-2 text-xs text-slate-500 font-mono">Current: <%= @user.obfuscated_venice_key %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :preferred_text_model, "Preferred Text Model", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.select :preferred_text_model,
                          options_for_select(@text_models, @selected_text_model),
                          { prompt: "Use default text trait" },
                          { class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" } %>
          <p class="mt-2 text-sm text-slate-500">Pick a trait; we'll resolve the best model automatically.</p>
        </div>
        
        <div>
          <%= form.label :preferred_image_model, "Preferred Image Model", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.select :preferred_image_model,
                          options_for_select(@image_models, @selected_image_model),
                          { prompt: "Use default image trait" },
                          { class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" } %>
          <p class="mt-2 text-sm text-slate-500">Pick a trait; we'll resolve the best model automatically.</p>
        </div>

        <div>
          <%= form.label :preferred_image_style, "Preferred Image Style", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.select :preferred_image_style,
                          options_for_select(@image_styles, @user.image_style),
                          { prompt: "Use default image style" },
                          { class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-600/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-violet-500/50 focus:border-violet-500/50 transition-all duration-200" } %>
          <p class="mt-2 text-sm text-slate-500">Choose your preferred style for scene images.</p>
        </div>

        <div class="flex items-start gap-4 p-4 glass-light rounded-xl">
          <div class="flex h-6 shrink-0 items-center">
            <%= form.check_box :safe_mode, class: "w-5 h-5 rounded bg-slate-700 border-slate-600 text-violet-600 focus:ring-violet-500/50 focus:ring-offset-0 cursor-pointer" %>
          </div>
          <div>
            <%= form.label :safe_mode, "Safe Mode", class: "font-medium text-white cursor-pointer" %>
            <p class="text-sm text-slate-400 mt-1">Removes explicit content from image generation.</p>
          </div>
        </div>

        <div class="flex items-start gap-4 p-4 glass-light rounded-xl">
          <div class="flex h-6 shrink-0 items-center">
            <%= form.check_box :reasoning_enabled, class: "w-5 h-5 rounded bg-slate-700 border-slate-600 text-violet-600 focus:ring-violet-500/50 focus:ring-offset-0 cursor-pointer" %>
          </div>
          <div>
            <%= form.label :reasoning_enabled, "Enable Reasoning", class: "font-medium text-white cursor-pointer" %>
            <p class="text-sm text-slate-400 mt-1">Enable extended reasoning for AI responses (may increase response time).</p>
          </div>
        </div>
      </div>
            
      <div class="px-8 py-5 border-t border-slate-700/50 glass-light flex justify-between">
        <%= link_to profile_path, class: "px-5 py-2.5 text-sm font-medium text-slate-300 bg-slate-700/50 border border-slate-600/50 rounded-xl hover:bg-slate-700 hover:border-slate-500 transition-all duration-200" do %>
          Cancel
        <% end %>
        <%= form.submit "Save Changes", class: "px-6 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-500 hover:to-indigo-500 rounded-xl shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all duration-300 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
